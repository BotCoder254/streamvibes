# Essential Application Settings
PORT=3000
BASE_URL=http://localhost:3000

# Database (Replace with your MongoDB Atlas connection)
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/streamvista?retryWrites=true&w=majority

# Authentication (Replace with strong secrets)
SESSION_SECRET=your_super_secret_session_key_here
JWT_SECRET=your_strong_jwt_secret_here

# File Upload Settings
UPLOAD_DIR=uploads
MAX_FILE_SIZE=500000000 # 500MB

# Email Settings (Replace with your email credentials)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password

# Application Environment
NODE_ENV=production

# Video Upload Settings
MAX_VIDEO_SIZE=500000000
MAX_THUMBNAIL_SIZE=5000000
ALLOWED_VIDEO_TYPES=video/mp4,video/webm
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif

# Storage Paths (Docker container paths)
UPLOAD_PATH=/app/public/uploads
TEMP_PATH=/app/uploads/temp