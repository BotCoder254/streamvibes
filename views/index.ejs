<!-- Hero Section -->
<div class="relative bg-gradient-to-r from-primary-600 to-primary-800 overflow-hidden">
    <div class="absolute inset-0">
        <img src="https://images.unsplash.com/photo-1522441815192-d9f04eb0615c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80" alt="Hero Background" class="w-full h-full object-cover opacity-20">
        <div class="absolute inset-0 bg-gradient-to-r from-primary-900/90 to-primary-800/90"></div>
    </div>
    <div class="relative max-w-7xl mx-auto py-24 px-4 sm:py-32 sm:px-6 lg:px-8">
        <div class="lg:grid lg:grid-cols-2 lg:gap-8 items-center">
            <div>
                <h1 class="text-4xl font-extrabold tracking-tight text-white sm:text-5xl lg:text-6xl">Share Your Story with the World</h1>
                <p class="mt-6 text-xl text-gray-300 max-w-3xl">StreamVista is your platform to create, share, and discover amazing videos. Join our community of creators and start sharing your story today.</p>
                <div class="mt-10 flex gap-4">
                    <% if (!isAuthenticated) { %>
                        <a href="/users/register" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary-500 hover:bg-primary-600">
                            Get Started
                            <i class="ph-arrow-right ml-2"></i>
                        </a>
                        <a href="/users/login" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-primary-600 bg-white hover:bg-gray-50">
                            Sign In
                            <i class="ph-sign-in ml-2"></i>
                        </a>
                    <% } else { %>
                        <a href="/videos/upload" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary-500 hover:bg-primary-600">
                            Upload Video
                            <i class="ph-upload-simple ml-2"></i>
                        </a>
                        <a href="/videos" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-primary-600 bg-white hover:bg-gray-50">
                            Browse Videos
                            <i class="ph-play-circle ml-2"></i>
                        </a>
                    <% } %>
                </div>
            </div>
            <div class="hidden lg:block relative mt-12 lg:mt-0">
                <div class="absolute -right-20 -top-20 w-72 h-72 bg-primary-500 rounded-full filter blur-3xl opacity-20 animate-pulse"></div>
                <div class="absolute -right-10 -bottom-10 w-96 h-96 bg-purple-500 rounded-full filter blur-3xl opacity-20 animate-pulse delay-100"></div>
                <img src="https://images.unsplash.com/photo-1626544827763-d516dce335e2?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1000&q=80" alt="Video creation" class="relative rounded-2xl shadow-2xl transform hover:scale-105 transition-all duration-300">
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="lg:text-center">
            <h2 class="text-base text-primary-600 font-semibold tracking-wide uppercase">Features</h2>
            <p class="mt-2 text-3xl leading-8 font-extrabold tracking-tight text-gray-900 sm:text-4xl">Everything you need to succeed</p>
            <p class="mt-4 max-w-2xl text-xl text-gray-500 lg:mx-auto">Our platform provides all the tools you need to create, share, and grow your audience.</p>
        </div>

        <div class="mt-20">
            <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
                <!-- Feature 1 -->
                <div class="relative p-6 bg-white rounded-lg shadow-sm hover:shadow-lg transition-shadow">
                    <div class="text-center">
                        <div class="inline-flex items-center justify-center p-3 bg-primary-100 rounded-md">
                            <i class="ph-upload-simple text-3xl text-primary-600"></i>
                        </div>
                        <h3 class="mt-4 text-lg font-medium text-gray-900">Easy Video Upload</h3>
                        <p class="mt-2 text-base text-gray-500">Upload your videos in any format. We handle the conversion and optimization automatically.</p>
                        <img src="https://images.unsplash.com/photo-1516321497487-e288fb19713f?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80" alt="Upload" class="mt-4 w-full h-32 object-cover rounded-lg">
                    </div>
                </div>

                <!-- Feature 2 -->
                <div class="relative p-6 bg-white rounded-lg shadow-sm hover:shadow-lg transition-shadow">
                    <div class="text-center">
                        <div class="inline-flex items-center justify-center p-3 bg-primary-100 rounded-md">
                            <i class="ph-chart-line text-3xl text-primary-600"></i>
                        </div>
                        <h3 class="mt-4 text-lg font-medium text-gray-900">Analytics & Insights</h3>
                        <p class="mt-2 text-base text-gray-500">Get detailed analytics about your videos' performance and audience engagement.</p>
                        <img src="https://images.unsplash.com/photo-1551288049-bebda4e38f71?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80" alt="Analytics" class="mt-4 w-full h-32 object-cover rounded-lg">
                    </div>
                </div>

                <!-- Feature 3 -->
                <div class="relative p-6 bg-white rounded-lg shadow-sm hover:shadow-lg transition-shadow">
                    <div class="text-center">
                        <div class="inline-flex items-center justify-center p-3 bg-primary-100 rounded-md">
                            <i class="ph-users text-3xl text-primary-600"></i>
                        </div>
                        <h3 class="mt-4 text-lg font-medium text-gray-900">Community</h3>
                        <p class="mt-2 text-base text-gray-500">Connect with other creators, share ideas, and grow your audience together.</p>
                        <img src="https://images.unsplash.com/photo-1522071820081-009f0129c71c?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80" alt="Community" class="mt-4 w-full h-32 object-cover rounded-lg">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

