                <div class="flex-1">
                    <textarea id="commentInput"
                        class="w-full px-0 py-2 bg-transparent border-b border-gray-200 focus:outline-none focus:border-blue-500 resize-none"
                        placeholder="Add a comment..."
                        rows="1"
                        oninput="autoResize(this)"
