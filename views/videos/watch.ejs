                                        <button onclick="deleteComment('<%= comment._id %>')"
                                            class="text-sm font-medium text-gray-600 hover:text-gray-900">Delete</button>
                                    <% } else if (user._id.toString() === video.user._id.toString()) { %>
                                        <button onclick="deleteComment('<%= comment._id %>')"
                                            class="text-sm font-medium text-gray-600 hover:text-gray-900">Delete</button>
                                    <% } %>
                                <% } %>
                            </div>

                            <!-- Reply Form -->
                            <% if (isAuthenticated) { %>
